<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/color_dialog_width"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtScreen"
                    style="@style/TextViewNormalBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:background="@drawable/bg_layout_white"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center|end"
                    android:maxLength="14"
                    android:paddingLeft="@dimen/margin_normal_small"
                    android:paddingRight="@dimen/margin_normal_small"
                    android:singleLine="true">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/btnKeyBack"
                    style="@style/TextViewNormal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:background="@drawable/selector_button_gray_with_radius"
                    android:contentDescription="@string/image_description"
                    app:srcCompat="@drawable/ic_backspace_red_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKeyMinus"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/decrease" />

            <TextView
                android:id="@+id/btnKeyPlus"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/increase" />

            <TextView
                android:id="@+id/btnKeyClear"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/keyClear" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKey7"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_7" />

            <TextView
                android:id="@+id/btnKey8"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_8" />

            <TextView
                android:id="@+id/btnKey9"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKey4"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_4" />

            <TextView
                android:id="@+id/btnKey5"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_5" />

            <TextView
                android:id="@+id/btnKey6"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKey1"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_1" />

            <TextView
                android:id="@+id/btnKey2"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_2" />

            <TextView
                android:id="@+id/btnKey3"
                style="@style/TextViewNormal"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_gray_with_radius"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/_3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_number_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/btnKey0"
                    style="@style/TextViewNormal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:background="@drawable/selector_button_gray_with_radius"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_dialog_key_10"
                    android:paddingBottom="@dimen/padding_dialog_key_10"
                    android:text="@string/_0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnKeyAccept"
                    style="@style/TextViewNormalWhite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/selector_button_blue"
                    android:gravity="center"
                    android:text="@string/done"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>