<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance">
        <item name="fontPath">@string/nunito_bold</item>
    </style>


    <style name="TextViewNormalGray">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextViewNormalBlack">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewSmallGray">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
    </style>


    <style name="EditTextLogin">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
    </style>

    <style name="TextViewLogo">
        <item name="android:textSize">@dimen/text_size_logo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">@string/nunito_bold</item>
    </style>


    <style name="ButtonCalculator">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="TextViewTitleWhite" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewNormal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
    </style>

    <style name="TextViewNormalBlue" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlueHighLight</item>
    </style>

    <style name="TextViewNormalBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
    </style>

    <style name="TextViewNormalWhite" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewIntro" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogNegativeButtonStyle">
        <item name="android:textColor">@drawable/selector_text_button_delete</item>
        <item name="android:background">@drawable/selector_button_white</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="DialogPositiveButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_button_blue</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
