        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:bottomLeftRadius="@dimen/corner_radius_btn"
                android:topLeftRadius="@dimen/corner_radius_btn" />
        </shape>
    </item>
</selector>